{
  "name": "polymarket-clone",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready binary prediction market platform",
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:backend\"",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:contracts": "pnpm --filter contracts test",
    "deploy:local": "pnpm --filter contracts deploy:local",
    "anvil": "anvil --chain-id 31337 --block-time 2",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,sol,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "turbo": "^2.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
